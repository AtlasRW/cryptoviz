<% provide(:title, " | Profil") %>
<%= render "devise/shared/error_messages", resource: resource %>
<!-- VIEW TERMINÉE MAIS NON UTILISÉE, USER CONFIRMABLE = false -->
<div class="max-w-xl bg-white shadow-md rounded px-8 pt-6 pb-8 mt-6 mx-auto">

<%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <p class="text-center text-gray-700 text-lg font-bold mb-6">RENVOYER UNE CONFIRMATION</p>

  <div class="mb-6">
    <%= f.label :Adresse_mail, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= f.email_field :email, autofocus: true, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:border-orange-300 outline-none", value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email), placeholder: "exemple@mail.com" %>
  </div>

  <div class="flex justify-center my-2">
    <%= f.submit 'Renvoyer', class: "bg-orange-500 hover:bg-orange-700 text-white font-bold py-2 px-4 rounded outline-none" %>
    <%= link_to "Retour", :back, class: "bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 ml-2 rounded outline-none" %>
  </div>
<% end %>

</div>

